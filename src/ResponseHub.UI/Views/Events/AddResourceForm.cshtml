@model Enivate.ResponseHub.UI.Models.Events.AdditionalResourceViewModel

<h4>Add resource</h4>

<div class="row">
	<div class="col-lg-8 add-resource-messages"></div>
</div>

<div class="row">
	<div class="col-xs-12">
		<form method="post">

			<div class="form-group">
				<label for="Name">Name *</label>
				<div class="row">
					<div class="col-sm-8 col-md-6 col-lg-4">
						@Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "e.g. John Smith" })
					</div>
				</div>
				@Html.ValidationMessageFor(model => model.Name)
			</div>

			<div class="form-group">
				<label for="Service">Agency *</label>
				<div class="row">
					<div class="col-sm-8 col-md-6 col-lg-4">
						@Html.DropDownListFor(model => model.AgencyId, Model.AvailableAgencies, new { @class = "form-control" })
					</div>
				</div>
				@Html.ValidationMessageFor(model => model.AgencyId)
			</div>

			<button class="btn btn-primary btn-icon" id="add-resource" onclick="responseHub.resources.addResource();" type="button"><i class="fa fa-fw fa-plus"></i>Add resource</button>
			<button class="btn btn-link" type="reset">Cancel</button>

		</form>
	</div>
</div>


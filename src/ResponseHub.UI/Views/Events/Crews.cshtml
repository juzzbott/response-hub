@model Enivate.ResponseHub.UI.Models.Events.EventCrewsViewModel

<h3>Current crews</h3>

@if (Model.Crews == null || Model.Crews.Count == 0)
{
	<p class="no-crews">There is currently no crews defined.</p>
}

<div class="panel-group crew-list">

	@for (int i = 0; i < Model.Crews.Count; i++)
	{
		<div class="panel panel-default">
			<div class="panel-heading" role="tab" id="crew-accordion-heading-@i">
				<h4 class="panel-title"><a class="accordion-toggle collapsed" data-toggle="collapse" href="#crew-accordion-@i">@Model.Crews[i].Name - Crew leader: @Model.Crews[i].CrewLeader.FullName</a></h4>
			</div>
			<div id="crew-accordion-@i" class="panel-collapse collapse">
				<div class="panel-body crew-details">
					<h4>Crew leader:</h4>
					<p>@Model.Crews[i].CrewLeader.FullName</p>
					<h4>Crew members:</h4>
					<p>
						@foreach (var crewMember in Model.Crews[i].CrewMembers)
						{
							@crewMember.FullName <br />
						}
					</p>

				</div>
			</div>
		</div>
	}

</div>

<h3>Create new crew</h3>

<form id="create-crew">

	<div class="row">
		<div class="col-xs-12">
			<div class="form-group">
				<label for="Service">Name *</label>
				<div class="row">
					<div class="col-sm-8 col-md-6 col-lg-4">
						@Html.TextBoxFor(model => model.CrewName, new { @class = "form-control", placeholder = "e.g. Alpha" })
					</div>
				</div>
				@Html.ValidationMessageFor(model => model.CrewName)
			</div>
		</div>
	</div>

	<script language="javascript">
	var users = [
		@for (int i = 0; i < Model.AvailableMembers.Count; i++)
		{
			@Html.Raw(String.Format("{0}{{id: \"{1}\", name: \"{2}\", memberNumber: \"{3}\"}}", (i > 0 ? "," : ""), Model.AvailableMembers[i].Item1, Model.AvailableMembers[i].Item2, Model.AvailableMembers[i].Item3));
			@Html.Raw("\r\n");
		}
	];
	</script>

	<h4>Members</h4>
	<div class="form-group">
		<label for="AvailableMembers">Crew members *</label>
		<div class="row">
			<div class="col-sm-8 col-md-6 col-lg-4">
				<select class="form-control selectpicker" data-live-search="true" id="AvailableMembers" title="Select member...">
					@foreach (var user in Model.AvailableMembers)
					{
						<option data-tokens="@user.Item2" value="@user.Item1">@user.Item2</option>
					}
				</select>
			</div>
		</div>
		@Html.ValidationMessageFor(model => model.SelectedMembers)
	</div>
	@Html.HiddenFor(model => model.SelectedMembers)

	<table class="table table-responsive table-striped table-hover" id="crew-members-table" data-selected-list="SelectedMembers" data-select-box="AvailableMembers">
		<thead>
			<tr>
				<th>Name</th>
				<th>Member number</th>
				<th>Crew leader</th>
				<th width="50">&nbsp;</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td colspan="4" class="none-selected">No members have been added to the this crew yet.</td>
			</tr>
		</tbody>
	</table>

	<div class="row bottom-20">
		<div class="col-xs-12">
			<button class="btn btn-primary btn-icon" id="create-crew" onclick="responseHub.events.createCrew();" type="button"><i class="fa fa-fw fa-plus"></i>Create crew</button>
		</div>
	</div>

</form>
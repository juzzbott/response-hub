@model Enivate.ResponseHub.UI.Models.MyAccount.UpdateAccountViewModel

@{
	ViewBag.Title = "Update your account";
}

<h1>@ViewBag.Title</h1>

<div class="row">
	<div class="col-sm-12">

		<form action="/my-account/update-account" method="post">

			@Html.AntiForgeryToken()

			@Html.ValidationSummary(true)

			<div class="form-group">
				<label for="Name">First name *</label>
				<div class="row">
					<div class="col-sm-8 col-md-6 col-lg-4">
						@Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = "John" })
					</div>
				</div>
				@Html.ValidationMessageFor(model => model.FirstName)
			</div>

			<div class="form-group">
				<label for="Name">Surname *</label>
				<div class="row">
					<div class="col-sm-8 col-md-6 col-lg-4">
						@Html.TextBoxFor(model => model.Surname, new { @class = "form-control", placeholder = "Smith" })
					</div>
				</div>
				@Html.ValidationMessageFor(model => model.Surname)
			</div>

			<button type="submit" class="btn btn-primary">Update details</button>
			<a href="/my-account" class="btn btn-link">Cancel</a>

		</form>

	</div>
</div>
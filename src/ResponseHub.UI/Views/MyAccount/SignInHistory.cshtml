@model IList<Enivate.ResponseHub.UI.Models.SignIn.SignInEntryListItemViewModel>

@{
	ViewBag.Title = "Sign in history";
}

<h1>@ViewBag.Title</h1>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Group</th>
			<th>Sign in</th>
			<th>Sign out</th>
			<th>Type</th>
			<th>Description</th>
		</tr>
	</thead>
	<tbody>
		@if (Model == null || Model.Count == 0)
		{
			<tr>
				<td colspan="5">You have not signed in yet. <a href="/sign-in">Sign in now.</a></td>
			</tr>
		}
		else
		{
			foreach (var item in Model)
			{
				<tr>
					<td>@item.GroupName</td>
					<td>@item.SignInTime.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
					<td>@(item.SignOutTime.HasValue ? item.SignOutTime.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm") : "")</td>
					<td>@item.SignInType</td>
					<td>@item.Description</td>
				</tr>
			}
		}
	</tbody>
</table>

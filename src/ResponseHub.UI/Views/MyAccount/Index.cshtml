@model Enivate.ResponseHub.UI.Models.MyAccount.AccountDetailsViewModel

@{
    ViewBag.Title = "My account";
}

<h1>@ViewBag.Title</h1>

@Html.SuccessFromQueryString("account_updated", "1", "Your account details have been successfully updated.")

@Html.SuccessFromQueryString("email_updated", "1", "Your email address has been successfully updated. Please use your updated email address to login to ResponseHub.")

<div class="row">
	<div class="col-xs-12">
		<p>
			<strong>Name:</strong><br />
			@Model.FirstName @Model.Surname
		</p>
		<p>
			<strong>Email address:</strong><br />
			@Model.EmailAddress
		</p>
		<div class="bottom-20">
			<a href="/my-account/update-account" class="btn btn-default btn-icon btn-spacer"><i class="fa fa-fw fa-pencil-square-o"></i>Update account</a>
			<a href="/my-account/update-email" class="btn btn-default btn-icon"><i class="fa fa-fw fa-envelope-o"></i>Update email address</a>
		</div>
	</div>
</div>
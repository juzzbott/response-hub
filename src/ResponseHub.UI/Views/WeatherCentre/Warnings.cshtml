@model Enivate.ResponseHub.UI.Models.WeatherCentre.WeatherCentreViewModel

<h3>Current Warnings</h3>

<div class="row warning-types hidden">
	<div class="col-xs-12">
		<label class="checkbox-inline hidden">
			<input type="checkbox" id="warnings-bom" value="warnings-bom" checked="checked" onclick="responseHub.weatherCentre.showHideWarnings('bom-warnings');"> Bureau of Meteorology
		</label>
		<label class="checkbox-inline hidden">
			<input type="checkbox" id="warnings-ses" value="option2" onclick="responseHub.weatherCentre.showHideWarnings('ses-warnings');"> SES
		</label>
		<label class="checkbox-inline hidden">
			<input type="checkbox" id="warnings-cfa" value="option3" onclick="responseHub.weatherCentre.showHideWarnings('cfa-warnings');"> CFA
		</label>
	</div>
</div>

@if (ViewBag.LoadWarningsError == true)
{
	<div class="error-summary ">
		Unable to load warning information.
	</div>
}
else
{

	<div class="bom-warnings">

		<p><strong>Bureau of Meteorology</strong></p>
		<ul class="warnings-list list-unstyled">
			<li>No warnings</li>
		</ul>

	</div>

	<div class="ses-warnings hidden">

		<p><strong>Victoria State Emergency Service</strong></p>
		<ul class="warnings-list list-unstyled">
			<li>No warnings</li>
		</ul>

	</div>

	<div class="cfa-warnings hidden">

		<p><strong>Country Fire Authority</strong></p>
		<ul class="warnings-list list-unstyled">
			<li>No warnings</li>
		</ul>

	</div>

}

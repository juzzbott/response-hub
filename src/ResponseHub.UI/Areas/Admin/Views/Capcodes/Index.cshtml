@model IList<Enivate.ResponseHub.Model.Groups.Capcode>

@{
    ViewBag.Title = "Capcodes";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>

@if (!String.IsNullOrEmpty(Request.QueryString["saved"]) && Request.QueryString["saved"] == "1")
{
	<div class="row">
		<div class="col-sm-12">
			<p class="alert alert-success alert-dismissable" role="alert">
				<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				The capcode detals have been successfully saved.
			</p>
		</div>
	</div>
}

@if (!String.IsNullOrEmpty(Request.QueryString["created"]) && Request.QueryString["created"] == "1")
{
	<div class="row">
		<div class="col-sm-12">
			<p class="alert alert-success alert-dismissable" role="alert">
				<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				The capcode has been successfully created.
			</p>
		</div>
	</div>
}

<a href="/admin/capcodes/create" class="btn btn-primary btn-icon btn-lg top-10"><i class="fa fa-plus"></i> Create capcode</a>

<table class="table table-hover table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Capcode Address</th>
			<th>Short Name</th>
			<th>Service</th>
		</tr>
	</thead>
	<tbody>
		@if (Model == null || Model.Count == 0)
		{
			<tr>
				<td colspan="5">No capcodes found. <a href="/admin/capcodes/create">Create one now</a>.</td>
			</tr>
		}
		else
		{
			foreach (var capcode in Model)
			{
				<tr>
					<td><a href="/admin/capcodes/@capcode.Id"><strong>@capcode.Name</strong></a></td>
					<td>@capcode.CapcodeAddress</td>
					<td>@capcode.ShortName</td>
					<td>@Html.EnumDescription(capcode.Service)</td>
				</tr>
			}
		}
	</tbody>
</table>
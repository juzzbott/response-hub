@model IList<Enivate.ResponseHub.Model.Groups.Group>

@{
    ViewBag.Title = "Groups";
}

<h1>Groups</h1>

<a href="/admin/groups/create" class="btn btn-primary"><i class="fa fa-plus"></i> Create group</a>

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>Name</th>
			<th>Service</th>
			<th>Created</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	<tbody>
		@if (Model == null || Model.Count == 0)
		{
			<tr>
				<td colspan="4">No groups found.</td>
			</tr>
		}
		@foreach(var group in Model)
		{
			<tr>
				<td><a href="/admin/groups/@group.Id"><strong>@group.Name</strong></a></td>
				<td>@Enum.GetName(typeof(Enivate.ResponseHub.Model.ServiceType), group.Service)</td>
				<td>@group.Created.ToString("yyyy-MM-dd")</td>
				<td><a href="">Edit</a> | <a href="">Remove</a></td>
			</tr>
		}
	</tbody>
</table>
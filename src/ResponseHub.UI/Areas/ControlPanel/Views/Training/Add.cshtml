@model Enivate.ResponseHub.UI.Areas.ControlPanel.Models.Training.AddTrainingSessionViewModel
@{
    ViewBag.Title = "Add training session";
    Layout = "~/Areas/ControlPanel/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>

<form action="@Request.Url.LocalPath" method="post">

	<div class="form-group">
		<label for="DateStarted">Date from *</label>
		<div class="row">
			<div class="col-sm-6 col-md-4">
				<div class="input-group date datepicker-control" data-provide="datepicker" data-date-format="dd/mm/yyyy" data-date-autoclose="true" data-date-show-on-focus="false">
					@Html.TextBoxFor(model => model.DateFrom, new { @class = "form-control", @Value = DateTime.Now.AddYears(-1).ToString("dd/MM/yyyy") })
					<div class="input-group-addon">
						<i class="fa fa-fw fa-calendar"></i>
					</div>
				</div>
				@Html.ValidationMessageFor(model => model.DateFrom)
				<div class="text-muted"><em>Date format should be dd/mm/yyyy.</em></div>
			</div>
		</div>
	</div>

	<div class="form-group">
		<label for="Service">Training type *</label>
		<div class="row">
			<div class="col-sm-8 col-md-6 col-lg-4">
				@Html.DropDownListFor(model => model.TrainingType, Model.AvailableTrainingTypes, new { @class = "form-control" })
			</div>
		</div>
		@Html.ValidationMessageFor(model => model.TrainingType)
	</div>

	<button type="submit" class="btn btn-primary btn-icon"><i class="fa fa-check"></i>Save training session</button>
	<a href="/control-panel/training" class="btn btn-link">Cancel</a>

</form>
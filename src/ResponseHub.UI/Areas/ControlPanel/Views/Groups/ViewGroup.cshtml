@model Enivate.ResponseHub.UI.Areas.Admin.Models.Groups.SingleGroupViewModel
@{
	ViewBag.Title = Model.Name;
	Layout = "~/Areas/ControlPanel/Views/Shared/_Layout.cshtml";
}

<div class="row">
	<div class="col-sm-9">
		<h1>@Model.Name</h1>
	</div>
	<div class="col-sm-3">
		<a href="@Request.Url.LocalPath/edit" class="btn btn-link btn-icon btn-lg pull-right"><i class="fa fa-pencil-square-o"></i>Edit group</a>
	</div>
</div>

@Html.ErrorFromQueryString("remove_user_error", "1", "There was an error removing the user from this group.")

@Html.SuccessFromQueryString("saved", "1", "The group detals have been successfully saved.")

@Html.SuccessFromQueryString("role_changed", "1", "The user role has been successfully updated.")

@Html.SuccessFromQueryString("user_removed", "1", "The user has been successfully removed from the group.")

<div class="row">
	<div class="col-md-6">

		<p class="service"><strong>Service: </strong><span class="mobile-block">@Model.Service</span></p>
		<p class="service"><strong>Region: </strong><span class="mobile-block">@Model.Region</span></p>
		<p class="capcode"><strong>Capcode: </strong><span class="mobile-block">@Model.Capcode</span></p>

		<p class="additional-capcodes"><strong>Additional capcodes:</strong></p>
		<ul class="">
			@if (!Model.AdditionalCapcodes.Any())
			{
				<li class="text-info">No additional capcodes</li>
			}
			@foreach(var capcode in Model.AdditionalCapcodes)
			{
				<li class="text-info">@capcode.Name (@capcode.CapcodeAddress) [@capcode.ShortName]</li>
			}
		</ul>

		<div class="row">
			<div class="col-sm-12">
				<strong>Description:</strong><br />
				<p>@Model.Description</p>
			</div> 
		</div>


	</div>
	<div class="col-md-6">

		@if (Model.HeadquartersCoordinates != null)
		{
			<div class="group-hq-map">
				<img src="/media/mapbox-static/@Model.HeadquartersCoordinates.Latitude,@Model.HeadquartersCoordinates.Longitude,15/350x200" width="350" height="200" />
				<span><i class="fa fa-fw fa-3x fa-map-marker"></i></span>
			</div>
		}

	</div>
</div>

<h3>Members</h3>

<p><a href="@Request.Url.LocalPath/add-member" class="btn btn-primary btn-lg icon-link"><i class="fa fa-user-plus"></i>Add member</a></p>

@Html.Partial("~/Views/Shared/SearchControl.cshtml", new Enivate.ResponseHub.UI.Models.SearchViewModel(Model.Users.Count, "members"))

<table class="table table-responsive table-striped table-hover">
	<thead>
		<tr>
			<th>Name</th>
			<th>Member number</th>
			<th>Email</th>
			<th>Security</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>

		@if (Model.Users == null || Model.Users.Count == 0)
		{
			<tr>
				<td colspan="4">This group does not contain any users.</td>
			</tr>
		}
		else
		{
			foreach (var user in Model.Users)
			{
				<tr>
					<td><a href="/profile/@user.Id">@user.FullName</a></td>
					<td>@user.Profile.MemberNumber</td>
					<td>@user.EmailAddress</td>
					<td>@user.GroupRole</td>
					<td>
						<a href="@Request.Url.LocalPath/change-role/@user.Id" class="btn-icon btn-action-icon" title="Change user role"><i class="fa fa-shield"></i></a>
						<a data-href="/control-panel/groups/@Model.Id/remove-user/@user.Id" data-toggle="modal" data-target="#confirm-delete" data-user-name="@user.FullName" class="cursor-pointer btn-icon btn-action-icon" title="Remove user from group"><i class="fa fa-user-times"></i></a>
					</td>
				</tr>
			}
		}

	</tbody>
</table>

<div class="modal fade delete-user" tabindex="-1" role="dialog" id="confirm-delete">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Confirm remove user</h4>
			</div>
			<div class="modal-body">
				<p>Are you sure you want to remove the user '#USER#' from the group?</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
				<a class="btn btn-primary btn-ok">Remove user</a>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->